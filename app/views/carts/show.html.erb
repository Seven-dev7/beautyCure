<h1 class="h1-cart-service">Panier</h1>

<div class="cart-style">
    <% @cart_services.each do |cart_service| %><br>
        <div class="card-cart-style">
            <!-- <div><%= cart_service.service.title %></div> -->
            <div><%= cart_service.service.description %></div>
            <div><%= cart_service.service.price %></div>
            <div><%= cart_service.service.duration %></div>
            <div><%= button_to 'Supprimer', cart_delete_cart_item_path(cart_service.id), method: :delete, class: "btn btn-primary button-cart"%></div>
        </div>
    <%end%>
    <div class='total-price-cart'>
            Prix-total : <% @cart_services.each do |cs| %>
                            <% cs.service.price %>
                            <% @array_price << cs.service.price%>
                        <%end%>
                            <%= @array_price.sum%> FCA
    </div>
    <div class='total-duration-cart'>
            Dur√©e totale : <% @cart_services.each do |cs| %>
                            <% cs.service.duration %>
                            <% @array_duration << cs.service.duration%>
                        <%end%>
                            <%= @array_duration.sum%> minutes
    </div>
    <div>
        <%= link_to 'Reservation', new_appointment_path(@appointment, @cart_services), method: :lock_cart, class: 'btn valid-button' %>
    </div>
</div>

